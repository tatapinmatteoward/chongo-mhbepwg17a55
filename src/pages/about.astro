---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const about = await getEntry('pages', 'about');
if (!about) throw new Error('About page not found');
const { Content } = await about.render();
---

<Layout title={about.data.title}>
  <!-- Hero Section with Gradient -->
  <section class="bg-gradient-to-r from-blue-600 to-purple-700 text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">{about.data.title}</h1>
      {about.data.description && <p class="text-xl md:text-2xl">{about.data.description}</p>}
    </div>
  </section>

  <!-- Content Card -->
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg p-8">
      <Content />
    </div>
  </div>
</Layout>