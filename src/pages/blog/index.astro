---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('pages', ({ id }) => id.startsWith('blog/'));
const sortedPosts = posts.sort((a, b) => {
  const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
  const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
  return dateB - dateA;
});
---

<Layout title="Blog - PCFixBlog">
  <div class="mb-12 text-center">
    <h1 class="text-5xl lg:text-6xl font-bold mb-4 bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">PCFixBlog Blog</h1>
    <p class="text-xl lg:text-2xl text-gray-600">Fix Your PC Errors Like a Pro</p>
  </div>

  {sortedPosts.length === 0 ? (
    <div class="text-center py-16">
      <div class="bg-white rounded-2xl p-12 shadow-lg border border-gray-100 max-w-2xl mx-auto">
        <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <h2 class="text-2xl font-bold text-gray-900 mb-2">No articles yet</h2>
        <p class="text-gray-600">Check back soon for new content!</p>
      </div>
    </div>
  ) : (
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {sortedPosts.map((post) => {
        const slug = post.id.replace('blog/', '').replace('.md', '');
        return (
          <a href={`/blog/${slug}/`} class="block group">
            <article class="relative overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm hover:shadow-xl transition-all duration-300 h-full flex flex-col">
              <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 to-purple-600"></div>
              <div class="p-6 flex-1 flex flex-col">
                <div class="flex-1">
                  <h2 class="text-2xl font-bold mb-3 group-hover:text-blue-600 transition-colors line-clamp-2">
                    {post.data.title}
                  </h2>
                  {post.data.date && (
                    <time class="text-sm text-gray-500 mb-3 flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      {new Date(post.data.date).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </time>
                  )}
                  {post.data.excerpt && (
                    <p class="text-gray-600 leading-relaxed line-clamp-3">
                      {post.data.excerpt}
                    </p>
                  )}
                </div>
                <div class="mt-4 pt-4 border-t border-gray-100">
                  <span class="text-blue-600 font-medium text-sm group-hover:gap-2 inline-flex items-center gap-1 transition-all">
                    Read article
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </span>
                </div>
              </div>
            </article>
          </a>
        );
      })}
    </div>
  )}
</Layout>
